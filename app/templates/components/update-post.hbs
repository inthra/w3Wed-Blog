{{#if updatePostForm}}
  <h2>Update Post</h2>
  <div>
    <form>
      <div class="form-group">
        <label for="author">Author</label>
        {{input value=post.author id="author"}}
      </div>

      <div class="form-group">
        <label for="title">Title</label>
        {{input value=post.title id="title"}}
      </div>

      <div class="form-group">
        <label for="image">Image</label>
        {{input value=post.image id="image"}}
      </div>

      <div class="form-group">
        <label for="detail">Article or Details</label>
        {{textarea value=post.detail id="detail" rows=5 class="form-control"}}
      </div>

      <p class="updatePost"{{action 'update' post}}>Save Changes</p>
    </form>
  </div>
{{else}}
  <p class="updatePost" {{action 'updatePostForm'}}>Update Post</p>
{{/if}}
